# -*- makefile -*-
## -----------------------------------------------------------------------
## -----------------------------------------------------------------------

all:

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
edit:
	./edit.sh

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
versions-chart :
	./versions.sh

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
sandbox:
	./sandbox.sh

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
clean:
	$(RM) -r branches
	$(RM) -r voltha-helm-charts
	$(RM) -r sandbox

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
help:
	@echo "USAGE: $(MAKE)"
	@echo "  edit              Load files of interest into the editor"
	@echo "  sandbox           Clone all voltha repos"
	@echo
	@echo '[VERSIONS]'
	@echo '  versions-chart    Invoke versions.sh'

# [EOF]

